{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@lib/*": ["src/lib/*"],
			"@assets/*": ["src/assets/*"]
		},
		"types": ["node"],
		"skipLibCheck": true,
		"moduleResolution": "node"
	}
}
