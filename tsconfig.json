{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@lib/*": ["src/lib/*"],
			"@assets/*": ["src/assets/*"],
			"@data/*": ["src/data/*"],
			"@scripts/*": ["src/scripts/*"],
			"@styles/*": ["src/styles/*"]
		},
		"types": ["node"],
		"skipLibCheck": true,
		"moduleResolution": "bundler"
	}
}
