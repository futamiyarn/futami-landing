---
interface Props {
  title: string;
  subtitle?: string;
  icon?: string;
  href?: string;
}

const { title, subtitle, icon = "fa-solid fa-link", href = "#" } = Astro.props;
---

<a href={href} class="group flex items-center p-4 px-6 rounded-3xl relative overflow-hidden transition-transform duration-200 bg-primary-container text-primary-on-container active:scale-95">
  <!-- Ripple Overlay -->
  <div class="absolute inset-0 transition-colors duration-200 pointer-events-none bg-transparent group-active:bg-white/20"></div>

  <div class="text-2xl w-8 text-center mr-6 shrink-0 z-10">
    <i class={icon}></i>
  </div>
  <div class="flex flex-col z-10">
    <span class="font-extrabold text-lg leading-tight">{title}</span>
    {subtitle && <span class="text-sm opacity-80 font-medium mt-0.5">{subtitle}</span>}
  </div>
</a>
