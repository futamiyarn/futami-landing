---
import { Icon } from 'astro-icon/components';

interface Props {
	href: string;
	icon: string;
	label?: string;
}

const { href, icon, label = 'Social link' } = Astro.props;
---

<a
	href={href}
	aria-label={label}
	class="bg-primary-container text-primary-on-container flex h-12 w-12 items-center justify-center rounded-xl transition-all duration-200 hover:-translate-y-1 hover:shadow-md hover:brightness-110 active:scale-95"
>
	<!-- 
		PERUBAHAN UKURAN:
		- Container: h-12 w-12 (48px) -> Sebelumnya h-14 w-14 (56px)
		- Icon: w-8 h-8 (32px) -> Sebelumnya w-7 h-7 (28px)
		- Radius: rounded-xl -> Sebelumnya rounded-2xl
	-->
	<Icon name={icon} class="h-8 w-8" />
</a>
