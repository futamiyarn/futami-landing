---
interface Props {
	href: string;
	icon: string;
	label?: string;
}

const { href, icon, label = 'Social link' } = Astro.props;
---

<a
	href={href}
	aria-label={label}
	class="bg-primary-container text-primary-on-container flex h-14 w-14 items-center justify-center rounded-2xl text-2xl transition-all duration-200 hover:-translate-y-1 hover:shadow-md hover:brightness-110 active:scale-95"
>
	<i class={icon}></i>
</a>
