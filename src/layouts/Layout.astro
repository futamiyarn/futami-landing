---
import Favicon from '@components/Favicon.astro';
import '@lib/styles/app.scss';

import Header from './Header.astro';

interface Props {
	title: string;
	className?: string;
}

const { title, className = '' } = Astro.props;

const isPreview =
	`${import.meta.env.PUBLIC_POKEAPI}`.toLowerCase() == 'true' ? true : false;
---

<script>
	import '@modules/frametrower';

	let baseStyles = ['color: #000', 'background-color:  #FEE440'].join(';');

	console.log(
