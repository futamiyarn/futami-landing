---
import '../styles/main.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Futami Linktree Material 3" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
        <!-- Fonts: Poppins (400, 600, 700) -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap" rel="stylesheet">
        
        <!-- Icons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        
		<title>{title}</title>
	</head>
	<body class="bg-surface text-on-surface font-sans antialiased flex justify-center min-h-screen">
        <!-- Main Container dipindah ke sini agar Header & Footer konsisten -->
        <main class="w-full max-w-[480px] p-6 flex flex-col gap-8 mx-auto">
            
            <!-- Header Logo (Pindah dari index.astro) -->
            <header class="text-center mb-2">
                <div class="inline-flex items-center gap-2 text-4xl font-extrabold tracking-tight select-none">
                    <i class="fa-solid fa-bullseye text-transparent bg-clip-text bg-gradient-to-br from-primary to-primary-container"></i> 
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-primary-container">Futami</span>
                </div>
            </header>

            <!-- Slot untuk konten halaman -->
		    <slot />

            <!-- Footer (Pindah dari index.astro) -->
            <footer class="text-center text-primary-container font-bold py-8 text-sm opacity-80">
                2025 Â© @Futami
            </footer>

        </main>
	</body>
</html>
