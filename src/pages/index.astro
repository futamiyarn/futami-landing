---
export const prerender = false;

import CardContainer from '@components/CardContainer.astro';
import Card from '@components/Card.astro';
import Layout from '@layouts/Layout.astro';
import CardYoutube from '@components/CardYoutube.astro';
import Icons from '@components/Icons.astro';
---

<Layout title="Futami Website">
	<!-- Social Link -->
	<CardContainer isIcon>
		<Icons
			name="Futami"
			iconName="youtube"
			url="https://www.youtube.com/channel/UCY_76_kibnLb0hgOdZXI-aQ"
		/>

		<Icons
			name="TikTok"
			url="https://www.tiktok.com/@futamiid"
			iconName="tiktok"
		/>
		<Icons name="Social" url="/social" iconName="groups" />
		<Icons name="Donate" url="/donate" iconName="wallet" />
	</CardContainer>
	
	<CardContainer
		nameGroup="Latest Videos"
		footer_name="More Videos"
		footer_url="/youtube/futami"
	>
		<CardYoutube limit_videos={2} />
	</CardContainer>
	<!-- Playlist -->
	<CardContainer nameGroup="Series">
		<Card
			name="FutaLatest"
			iconName="playlist"
			description="News and Popcuture"
			url="https://www.youtube.com/playlist?list=PLQX-jAZdOlz6t8ODAhKbW1D85Es6l5msE"
		/>

		<Card
			name="Tutorial"
			iconName="playlist"
			description="How To"
			url="https://www.youtube.com/playlist?list=PLQX-jAZdOlz5EKlSdgDmh3PjqEcDzZizz"
		/>

		<Card
			name="Clash Story"
			iconName="playlist"
			description="All about Clash and Supercell"
			url="https://www.youtube.com/playlist?list=PLQX-jAZdOlz78A6rWK_9lnxoF1QOT2FOd"
		/>
	</CardContainer>
	<!-- Apps -->
	<CardContainer nameGroup="Apps">
		<Card
			name="Teleslider"
			description="Teleprompter but sideway"
			iconName="teleslider"
			url="https://teleslider.futami.my.id"
		/>
	</CardContainer>

</Layout>
