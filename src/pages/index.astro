---
export const prerender = false;

import CardContainer from '@components/CardContainer.astro';
import Card from '@components/Card.astro';
import Layout from '@layouts/Layout.astro';
import CardYoutube from '@components/CardYoutube.astro';
import Icons from '@components/Icons.astro';
---

<Layout title="Futami Website">
	<!-- Social Link -->
	<CardContainer isIcon>
		<Icons
			name="Instagram"
			url="https://www.instagram.com/futamiid"
			iconName="instagram"
		/>
		<Icons
			name="Twitter"
			url="https://twitter.com/futamiid"
			iconName="twitter_x"
		/>
	</CardContainer>
	<!-- Apps -->
	<CardContainer nameGroup="Apps">
		<Card
			name="Teleslider"
			description="Teleprompter but sideway"
			iconName="teleslider"
			url="https://teleslider.futami.my.id"
		/>
	</CardContainer>

	<!-- Platforms -->

	<CardContainer nameGroup="Platform">
		<Card
			name="Futami"
			iconName="youtube"
			description="Youtube Channel"
			url="https://www.youtube.com/channel/UCY_76_kibnLb0hgOdZXI-aQ"
		/>

		<Card
			name="TikTok"
			description="Futami TikTok Account"
			url="https://www.tiktok.com/@futamiid"
			iconName="tiktok"
		/>
	</CardContainer>

	<!-- Playlist -->

	<CardContainer nameGroup="Playlist">
		<Card
			name="FutaLatest"
			iconName="playlist"
			description="News and Popcuture"
			url="https://www.youtube.com/playlist?list=PLQX-jAZdOlz6t8ODAhKbW1D85Es6l5msE"
		/>

		<Card
			name="Tutorial"
			iconName="playlist"
			description="How To"
			url="https://www.youtube.com/playlist?list=PLQX-jAZdOlz5EKlSdgDmh3PjqEcDzZizz"
		/>

		<Card
			name="Clash Story"
			iconName="playlist"
			description="All about Clash and Supercell"
			url="https://www.youtube.com/playlist?list=PLQX-jAZdOlz78A6rWK_9lnxoF1QOT2FOd"
		/>
	</CardContainer>

	<CardContainer
		nameGroup="YouTube Videos"
		footer_name="More Futami Videos"
		footer_url="/youtube/futami"
	>
		<CardYoutube limit_videos={4} />
	</CardContainer>

	<CardContainer nameGroup="Pages">
		<Card name="Social" url="/social" iconName="groups" />

		<Card name="Donate" url="/donate" iconName="wallet" />
	</CardContainer>
</Layout>
