---
import CardContainer from '@lib/components/CardContainer.astro';
import Card from '@lib/components/Card.astro';
import Layout from '@lib/components/layout.astro';
import CardYoutube from '@lib/components/CardYoutube.astro';

import Playlist from '@lib/assets/svg/icons/playlist.svg?raw';
import Youtube from '@lib/assets/svg/icons/youtube.svg?raw';
import TikTok from '@lib/assets/svg/icons/tiktok.svg?raw';
import Social from '@lib/assets/svg/icons/groups.svg?raw';
import Wallet from '@lib/assets/svg/icons/wallet.svg?raw';
import Teleslider from '@lib/assets/svg/icons/teleslider_icon.svg?raw';
---

<Layout title="Futami Website">
	<CardContainer nameGroup="Apps">
		<Card
			name="Teleslider"
			description="Teleprompter but sideway"
			svg={Teleslider}
			url="https://teleslider.futami.my.id"
		/>
	</CardContainer>

	<CardYoutube
		limit_videos={4}
		footer_name="More Futami Videos"
		footer_url="/youtube/futami"
	/>

	<!-- Playlist -->

	<CardContainer nameGroup="Playlist">
		<Card
			name="FutaLatest"
			svg={Playlist}
			description="News and Popcuture"
			url="https://www.youtube.com/playlist?list=PLQX-jAZdOlz6t8ODAhKbW1D85Es6l5msE"
		/>

		<Card
			name="Tutorial"
			svg={Playlist}
			description="How To"
			url="https://www.youtube.com/playlist?list=PLQX-jAZdOlz5EKlSdgDmh3PjqEcDzZizz"
		/>
	</CardContainer>

	<!-- Social -->

	<CardContainer nameGroup="Social">
		<Card
			name="Futami"
			svg={Youtube}
			description="Youtube Channel"
			url="https://www.youtube.com/channel/UCY_76_kibnLb0hgOdZXI-aQ"
		/>

		<Card
			name="TikTok"
			description="Futami TikTok Account"
			url="https://www.tiktok.com/@futamifuta"
			svg={TikTok}
		/>

		<Card name="Social" url="/social" svg={Social} />

		<Card name="Donate" url="/donate" svg={Wallet} />
	</CardContainer>
</Layout>
