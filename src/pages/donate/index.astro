---
import CardGroup from '@components/CardGroup.astro';
import CardItem from '@components/CardItem.astro';
import Layout from '@layouts/Layout.astro';

import Trakteer from '@lib/images/trakteer.svg?raw';
import Saweria from '@lib/images/saweria.png';

import { Image } from 'astro:assets';
---

<Layout title="Donate - Futami" className="totality-container">
	<!-- In Indonesia (IDR) -->
	<CardGroup nameGroup="In Indonesia (IDR)">
		<!-- Trakteer -->
		<CardItem
			name="Trakteer"
			url="https://trakteer.id/futami"
			description="Rp. 5.000 each"
			svg={Trakteer}
		/>

		<!-- Saweria -->
		<CardItem
			name="Saweria"
			url="https://saweria.co/futami"
			description="Min Rp. 5.000"
		>
			<Image
				src={Saweria}
				alt={'Saweria'}
				quality={75}
				width={128}
				height={128}
				slot="image-astro"
			/>
		</CardItem>
	</CardGroup>

	<!-- Overseas (US Dollar) -->
	<CardGroup nameGroup="Overseas (US Dollar)">
		<!-- Ko-fi -->
		<CardItem
			name="Ko-fi"
			url="https://ko-fi.com/futami"
			description="$3 each"
			icon="simple-icons:kofi"
		/>
	</CardGroup>
</Layout>
