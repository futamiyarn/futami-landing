---
import CardContainer from '@lib/components/CardContainer.astro';
import Card from '@lib/components/Card.astro';
import Layout from '@lib/components/layout.astro';

import Trakteer from '@lib/assets/svg/icons/trakteer.svg?raw';
import Saweria from '@lib/assets/svg/icons/saweria.svg?raw';
import Kofi from '@lib/assets/svg/icons/kofi.svg?raw';
---

<Layout title="Donate - Futami" className="totality-container">
	<!-- In Indonesia (IDR) -->
	<CardContainer nameGroup="In Indonesia (IDR)">
		<!-- Trakteer -->
		<Card
			name="Trakteer"
			url="https://trakteer.id/futami"
			description="Rp. 5.000 each (Indonesia Only)"
			svg={Trakteer}
		/>

		<!-- Saweria -->
		<Card
			name="Saweria"
			url="https://saweria.co/futami"
			description="Min Rp. 5.000 (Indonesia Only)"
			svg={Saweria}
		/>
	</CardContainer>

	<!-- Overseas (US Dollar) -->
	<CardContainer nameGroup="Overseas (US Dollar)">
		<!-- Ko-fi -->
		<Card
			name="Ko-fi"
			url="https://ko-fi.com/futami"
			description="$3 each"
			svg={Kofi}
		/>
	</CardContainer>
</Layout>
