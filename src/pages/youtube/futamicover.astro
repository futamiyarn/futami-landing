---
import Layout from '@lib/components/layout.astro';
import CardYoutube from '@lib/components/CardYoutube.astro';
import CardContainer from '@lib/components/CardContainer.astro';
import Card from '@lib/components/Card.astro';

import ChannelData from '@lib/data/youtube.json';
import { Image } from 'astro:assets';

import FutaminiProfile from '@lib/assets/images/channel-profile/futamini.jpg';
import FutamiProfile from '@lib/assets/images/channel-profile/futami.jpg';
---

<Layout title="Futami Videos - Futami" className="totality-container">
	<CardContainer nameGroup="Other Channels">
		<Card name="Futami" url="/youtube/futami">
			<Image
				src={FutamiProfile}
				alt={'Futami Ch.'}
				quality={75}
				width={128}
				height={128}
				loading="eager"
				slot="image-astro"
			/>
		</Card>

		<Card name="Futamini" url="/youtube/futamini">
			<Image
				src={FutaminiProfile}
				alt={'Futamini'}
				quality={75}
				width={128}
				height={128}
				loading="eager"
				slot="image-astro"
			/>
		</Card>
	</CardContainer>

	<CardYoutube channel_id={ChannelData.futamicover.id} />
</Layout>
