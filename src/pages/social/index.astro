---
import CardGroup from '@components/CardGroup.astro';
import CardItem from '@components/CardItem.astro';
import Layout from '@layouts/Layout.astro';

import FaYouTube from '@lib/images/font-awesome/youtube.svg?raw';
import FaTiktok from '@lib/images/font-awesome/tiktok.svg?raw';
import FaInstagram from '@lib/images/font-awesome/instagram.svg?raw';
import FaXTwitter from '@lib/images/font-awesome/x-twitter.svg?raw';
import FaFacebook from '@lib/images/font-awesome/facebook.svg?raw';
import FaCoins from '@lib/images/font-awesome/coins-solid.svg?raw';

import { Image } from 'astro:assets';
import FutamiProfile from '@lib/images/channel-profile/futami.jpg';
import FutaminiProfile from '@lib/images/channel-profile/futamini.jpg';
import CoverProfile from '@lib/images/channel-profile/futamicover.jpg';
---

<Layout title="Social - Futami" className="totality-container">
	<!-- Youtube -->
	<CardGroup nameGroup="YouTube">
		<!-- Futami Ch. -->
		<CardItem
			name="Futami Ch."
			url="https://youtube.com/@futamiyarn?sub_confirmation=1"
			description="Games, Tutorial, and More"
		>
			<Image
				src={FutamiProfile}
				alt={'Saweria'}
				quality={'mid'}
				width={50}
				height={50}
				slot="image-astro"
			/>
		</CardItem>

		<!-- FutaMINI -->
		<CardItem
			name="FutaMINI"
			url="https://youtube.com/@futamini?sub_confirmation=1"
			description="Random content"
		>
			<Image
				src={FutaminiProfile}
				alt={'Saweria'}
				quality={'mid'}
				width={50}
				height={50}
				slot="image-astro"
			/>
		</CardItem>

		<!-- Futami Cover -->
		<CardItem
			name="Futami Cover"
			url="https://youtube.com/@futamicover?sub_confirmation=1"
			description="AI Covers"
		>
			<Image
				src={CoverProfile}
				alt={'Saweria'}
				quality={'mid'}
				width={50}
				height={50}
				slot="image-astro"
			/>
		</CardItem>
	</CardGroup>

	<!-- More Shorts -->
	<CardGroup nameGroup="More Shorts">
		<!-- YouTube Shorts -->
		<CardItem
			name="YouTube Shorts"
			url="https://youtube.com/@futamiyarn/shorts?sub_confirmation=1"
			description="Futami Ch. (Shorts Edition)"
			svg={FaYouTube}
		/>

		<!-- TikTok -->
		<CardItem
			name="TikTok"
			url="https://tiktok.com/@futamiyarn"
			description="Why I make this?"
			svg={FaTiktok}
		/>

		<!-- Instagram -->
		<CardItem
			name="Instagram"
			url="https://instagram.com/futamiyarn"
			description="Also, why I make this?"
			svg={FaInstagram}
		/>
	</CardGroup>

	<!-- Comunities -->
	<CardGroup nameGroup="Comunities">
		<!-- X (Twitter) -->
		<CardItem
			name="X (Twitter)"
			url="https://x.com/futamiyarn"
			description="Stalking Vtuber"
			svg={FaXTwitter}
		/>

		<!-- Facebook -->
		<CardItem
			name="Facebook"
			url="https://facebook.com/futamiyarn"
			description="More shitpost here!"
			svg={FaFacebook}
		/>

		<!-- Instagram -->
		<CardItem
			name="Instagram"
			url="https://instagram.com/futamiyarn"
			description="Random Content"
			svg={FaInstagram}
		/>

		<!-- Donate -->
		<CardItem
			name="Donate"
			url="/donate"
			description="Support this creator"
			svg={FaCoins}
		/>
	</CardGroup>
</Layout>
