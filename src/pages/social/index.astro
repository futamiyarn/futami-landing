---
import CardContainer from '@components/CardContainer.astro';
import Card from '@components/Card.astro';
import Layout from '@layouts/Layout.astro';

import FutamiProfile from '@lib/assets/images/channel-profile/futami.jpg';
import FutaminiProfile from '@lib/assets/images/channel-profile/futamini.jpg';
import CoverProfile from '@lib/assets/images/channel-profile/futamicover.png';
---

<Layout title="Social - Futami" className="totality-container">
	<!-- Apps -->
	<CardContainer nameGroup="Apps">
		<Card
			name="Teleslider"
			description="Teleprompter but sideway"
			iconName="teleslider"
			url="https://teleslider.futami.my.id"
		/>
	</CardContainer>
	<!-- Youtube -->
	<CardContainer nameGroup="YouTube">
		<!-- Futami Ch. -->
		<Card
			name="Futami Ch."
			url="https://youtube.com/@futamifuta?sub_confirmation=1"
			description="Games, Anime, Tutorial"
			img={FutamiProfile}
		/>

		<!-- FutaMINI -->
		<Card
			name="FutaMINI"
			url="https://youtube.com/@futamini?sub_confirmation=1"
			description="Random content"
			img={FutaminiProfile}
		/>

		<!-- Futami Cover -->
		<Card
			name="Futami Cover"
			url="https://youtube.com/@futamicover?sub_confirmation=1"
			description="AI Covers (less upload)"
			img={CoverProfile}
		/>
	</CardContainer>

	<!-- More Shorts -->
	<CardContainer nameGroup="More Shorts">
		<!-- YouTube Shorts -->
		<Card
			name="Futami Ch."
			url="https://youtube.com/@futamifuta/shorts"
			description="YouTube Shorts"
			iconName="yt_shorts"
		/>

		<!-- TikTok -->
		<Card
			name="TikTok"
			url="https://tiktok.com/@futamifuta"
			description="Futami TikTok"
			iconName="tiktok"
		/>

		<!-- Instagram -->
		<Card
			name="Instagram"
			url="https://instagram.com/futamifuta"
			description="Update and Reels"
			iconName="instagram"
		/>
	</CardContainer>

	<!-- Comunities -->
	<CardContainer nameGroup="Comunities">
		<!-- X (Twitter) -->
		<Card
			name="X (Twitter)"
			url="https://x.com/futamifuta"
			description="Stalking Vtuber"
			iconName="twitter_x"
		/>

		<!-- Facebook -->
		<Card
			name="Facebook"
			url="https://facebook.com/futamifuta"
			description="More shitpost here!"
			iconName="facebook"
		/>

		<!-- Instagram -->
		<Card
			name="Instagram"
			url="https://instagram.com/futamifuta"
			description="My Updates"
			iconName="instagram"
		/>

		<!-- Bluesky -->
		<Card
			name="Bluesky"
			url="https://bsky.app/profile/futami.my.id"
			description="Futami Bluesky"
			iconName="bluesky"
		/>
	</CardContainer>

	<!-- Donate -->
	<CardContainer nameGroup="Donate">
		<Card
			name="Trakteer"
			url="https://trakteer.id/futami"
			description="Rp. 5.000 each (Indonesia Only)"
			iconName="trakteer"
		/>

		<Card
			name="Saweria"
			url="https://saweria.co/futami"
			description="Min Rp. 5.000 (Indonesia Only)"
			iconName="saweria"
		/>

		<Card
			name="Ko-fi"
			url="https://ko-fi.com/futami"
			description="Min $3 (All Regions)"
			iconName="kofi"
		/>
	</CardContainer>
</Layout>
