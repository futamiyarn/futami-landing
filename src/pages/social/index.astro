---
import CardGroup from '@components/CardGroup.astro';
import CardItem from '@components/CardItem.astro';
import Layout from '@layouts/Layout.astro';

import { Image } from 'astro:assets';
import FutamiProfile from '@lib/images/channel-profile/futami.png';
import FutaminiProfile from '@lib/images/channel-profile/futamini.jpg';
import CoverProfile from '@lib/images/channel-profile/futamicover.png';
---

<Layout title="Social - Futami" className="totality-container">
	<!-- Youtube -->
	<CardGroup nameGroup="YouTube">
		<!-- Futami Ch. -->
		<CardItem
			name="Futami Ch."
			url="https://youtube.com/@futamiyarn?sub_confirmation=1"
			description="Games, Tutorial, and More"
		>
			<Image
				src={FutamiProfile}
				alt={'Saweria'}
				quality={75}
				width={128}
				height={128}
				slot="image-astro"
			/>
		</CardItem>

		<!-- FutaMINI -->
		<CardItem
			name="FutaMINI"
			url="https://youtube.com/@futamini?sub_confirmation=1"
			description="Random content"
		>
			<Image
				src={FutaminiProfile}
				alt={'Saweria'}
				quality={75}
				width={128}
				height={128}
				slot="image-astro"
			/>
		</CardItem>

		<!-- Futami Cover -->
		<CardItem
			name="Futami Cover"
			url="https://youtube.com/@futamicover?sub_confirmation=1"
			description="AI Covers"
		>
			<Image
				src={CoverProfile}
				alt={'Saweria'}
				quality={75}
				width={128}
				height={128}
				slot="image-astro"
			/>
		</CardItem>
	</CardGroup>

	<!-- More Shorts -->
	<CardGroup nameGroup="More Shorts">
		<!-- YouTube Shorts -->
		<CardItem
			name="YouTube Shorts"
			url="https://youtube.com/@futamiyarn/shorts?sub_confirmation=1"
			description="Futami Ch. (Shorts Edition)"
			icon="shorts"
		/>

		<!-- TikTok -->
		<CardItem
			name="TikTok"
			url="https://tiktok.com/@futamiyarn"
			description="Why I make this?"
			icon="iconoir:tiktok"
		/>

		<!-- Instagram -->
		<CardItem
			name="Instagram"
			url="https://instagram.com/futamiyarn"
			description="Also, why I make this?"
			icon="hugeicons:instagram"
		/>
	</CardGroup>

	<!-- Comunities -->
	<CardGroup nameGroup="Comunities">
		<!-- X (Twitter) -->
		<CardItem
			name="X (Twitter)"
			url="https://x.com/futamiyarn"
			description="Stalking Vtuber"
			icon="hugeicons:new-twitter-rectangle"
		/>

		<!-- Facebook -->
		<CardItem
			name="Facebook"
			url="https://facebook.com/futamiyarn"
			description="More shitpost here!"
			icon="hugeicons:facebook-01"
		/>

		<!-- Instagram -->
		<CardItem
			name="Instagram"
			url="https://instagram.com/futamiyarn"
			description="Random Content"
			icon="hugeicons:instagram"
		/>

		<!-- Donate -->
		<CardItem
			name="Donate"
			url="/donate"
			description="Support this creator"
			icon="iconoir:donate"
		/>
	</CardGroup>
</Layout>
